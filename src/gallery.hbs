{{#each this}}
<div class="gallery-card">
<a class="gallery-card__link" href="{{largeImageURL}}" onclick="event.preventDefault()">
  <img class="gallery-card__image" src="{{webformatURL}}" alt="{{tags}}" loading="lazy" />
  <div class="gallery-info">
    <p class="gallery-info__item">
      <b>Likes</b>
      {{likes}}
    </p>
    <p class="gallery-info__item">
      <b>Views</b>
      {{views}}
    </p>
    <p class="gallery-info__item">
      <b>Comments</b>
      {{comments}}
    </p>
    <p class="gallery-info__item">
      <b>Downloads</b>
      {{downloads}}
    </p>
  </div>
</a>
</div>
{{/each}}